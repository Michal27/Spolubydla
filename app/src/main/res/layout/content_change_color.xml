<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cz.example.innovasoft.spolubydla.ChangeColorActivity"
    tools:showIn="@layout/activity_change_color">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/color0"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:background="@color/red"
                    android:onClick="changeColor0ButtonPressed"/>

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/color1"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:background="@color/green"
                    android:onClick="changeColor1ButtonPressed"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/color2"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:background="@color/azure"
                    android:onClick="changeColor2ButtonPressed"/>

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/color3"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:background="@color/blue"
                    android:onClick="changeColor3ButtonPressed"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/color4"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:background="@color/orange"
                    android:onClick="changeColor4ButtonPressed"/>

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/color5"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:background="@color/purple"
                    android:onClick="changeColor5ButtonPressed"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/color6"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:background="@color/pink"
                    android:onClick="changeColor6ButtonPressed"/>

                <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/color7"
                    android:minHeight="100dp"
                    android:minWidth="100dp"
                    android:background="@color/black"
                    android:onClick="changeColor7ButtonPressed"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
